<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/clientFnameTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="16dp"
        android:hint="client fname"
        app:layout_constraintStart_toEndOf="@+id/clientLnameTV"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/clientGenderTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:hint="client gender"
        app:layout_constraintStart_toStartOf="@+id/clientFnameTV"
        app:layout_constraintTop_toBottomOf="@+id/clientFnameTV" />

    <TextView
        android:id="@+id/clientLnameTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="16dp"
        android:hint="client lname"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/clientAgeTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:hint="client age"
        app:layout_constraintStart_toStartOf="@+id/clientLnameTV"
        app:layout_constraintTop_toBottomOf="@+id/clientLnameTV" />
</androidx.constraintlayout.widget.ConstraintLayout>